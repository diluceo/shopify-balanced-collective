<style>
	#hero-txt-{{ section.id }} span {
		background-color: {{ section.settings.highlight_color }};
		color: {{ section.settings.highlight_text_color }};
		padding: 0 5px;
	}
</style>

<div id="hero-txt-{{ section.id }}" class="hero-1 hero-txt">
  <div class="container page-full">
    <div class="col flex-main flex-{{section.settings.content_alignment}} p-med">
      {%- if section.settings.contained -%}
      <div class="content-wrapper contained" style="background-color:{{section.settings.container_color}}; max-width: {{section.settings.max_width}};">
      {%- else -%}
      <div class="content-wrapper text-{{section.settings.text_alignment}} p-small" style="max-width: {{section.settings.max_width}};"> 
      {%- endif -%}
        {%- if section.settings.caption != blank -%}
				<p class="text-main" style="color:{{section.settings.caption_color}};">{{ section.settings.caption }}</p>
				{%- endif -%}
        {%- if section.settings.content != blank -%}
				<h3 class="text-subtitle" style="color:{{section.settings.content_color}};">{{ section.settings.content }}</h3>
				{%- endif -%}
        {%- if section.settings.button_link_1 != blank -%}
        <a href="{{ section.settings.button_link_1 }}" class="btn custom-btn" style="background-color:{{section.settings.button_color}};">{{ section.settings.button_label }}</a>
        {%- endif -%}
      </div>
    </div>
    <div class="bgimage">
      {% render 'image-block', my_img: section.settings.bg_image %}
    </div>
  </div>
</div>

{% schema %}
	{
		"name": "Custom Hero - Text",
		"tag": "section",
		"class": "wrapper",
		"settings": [
			{
				"type": "text",
				"id": "max_width",
				"label": "Max Width",
				"default": "600px",
				"info": "Accepts px/em/%/vw"
			},
			{
				"type": "select",
				"id": "content_alignment",
				"label": "Content Alignment",
				"options": [
					{
						"value": "center",
						"label": "center"
					},
					{
						"value": "center-right",
						"label": "Center Right"
					},
					{
						"value": "center-left",
						"label": "Center Left"
					},
					{
						"value": "top-right",
						"label": "Top Right"
					},
					{
						"value": "top-left",
						"label": "Top Left"
					},
					{
						"value": "bottom-right",
						"label": "Bottom Right"
					},
					{
						"value": "bottom-left",
						"label": "Bottom Left"
					}
				],
				"default": "center"
			},
      {
        "type": "radio",
        "id": "text_alignment",
        "label": "Section Width",
        "options": [
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
			{
				"type": "image_picker",
				"id": "bg_image",
				"label": "Backgroud Image"
			},
      {
        "type": "checkbox",
        "id": "contained",
        "label": "Boxed Content",
        "default": false
      },
      {
        "type": "color",
        "id": "container_color",
        "label": "Container Color",
        "default": "#FFFFFF"
      },
			{
				"type": "text",
				"id": "caption",
				"default": "LOREM, IPSUM DOLOR SIT.",
				"label": "Caption"
			},
			{
				"type": "textarea",
				"id": "content",
				"default": "Lorem ipsum dolor sit amet consectetur adipisicing elit provident.",
				"label": "content"
			},
			{
				"type": "text",
				"id": "button_label",
				"default": "Button Label",
				"label": "Link Text"
			},
			{
				"type": "url",
				"id": "button_link_1",
				"label": "Button Link"
			},
			{
				"type": "color",
				"id": "caption_color",
				"label": "Caption Color",
				"default": "#333"
			},
			{
				"type": "color",
				"id": "content_color",
				"label": "Content Color",
				"default": "#333"
			},
			{
				"type": "color",
				"id": "button_color",
				"label": "Button Color",
				"default": "#FF6976"
			}
		],
		"presets": [
			{
				"name":"Custom Hero - Text"
			}
		]
	}
{% endschema %}
