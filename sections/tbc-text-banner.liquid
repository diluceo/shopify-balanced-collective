<div id="hero-{{ section.id }}" class="hero-1">
  <div class="container page-width">
    <div class="col flex flex-bottom-left p-med">
      <div class="content-wrapper p-small">
        {%- if section.settings.caption != blank -%}
				<p class="text-main" style="color:{{section.settings.caption_color}};">{{ section.settings.caption }}</p>
				{%- endif -%}
        {%- if section.settings.content != blank -%}
				<h3 class="text-subtitle" style="color:{{section.settings.content_color}};">{{ section.settings.content }}</h3>
				{%- endif -%}
        {%- if section.settings.button_link_1 != blank -%}
        <a href="{{ section.settings.button_link_1 }}" class="btn custom-btn" style="background-color:{{section.settings.button_color}};">{{ section.settings.button_label }}</a>
        {%- endif -%}
      </div>
    </div>
    <div class="bgimage">
      {% render 'image-block', my_img: section.settings.bg_image %}
    </div>
  </div>
</div>

{% schema %}
	{
		"name": "Custom Hero - Text",
		"tag": "section",
		"class": "wrapper",
		"settings": [
			{
				"type": "image_picker",
				"id": "bg_image",
				"label": "Backgroud Image"
			},
			{
				"type": "text",
				"id": "caption",
				"default": "LOREM, IPSUM DOLOR SIT.",
				"label": "Caption"
			},
			{
				"type": "textarea",
				"id": "content",
				"default": "Lorem ipsum dolor sit amet consectetur adipisicing elit provident.",
				"label": "content"
			},
			{
				"type": "text",
				"id": "button_label",
				"default": "Button Label",
				"label": "Link Text"
			},
			{
				"type": "url",
				"id": "button_link_1",
				"label": "Button Link"
			},
			{
				"type": "color",
				"id": "caption_color",
				"label": "Caption Color",
				"default": "#333"
			},
			{
				"type": "color",
				"id": "content_color",
				"label": "Content Color",
				"default": "#333"
			},
			{
				"type": "color",
				"id": "button_color",
				"label": "Button Color",
				"default": "#FF6976"
			}
		],
		"presets": [
			{
				"name":"Custom Hero - Text"
			}
		]
	}
{% endschema %}
