          },
          {
            "type": "text",
            "id": "about_text_3",
            "label": "Text 3",
            "default": "Lorem ipsum Dolor"
          }
        ]
      },
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "textarea",
            "id": "content_title",
            "label": "Content Title",
            "default": "Lorem ipsum"
          },
          {
            "type": "textarea",
            "id": "content_text_1",
            "label": "Content Text",
            "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit provident."
          }
        ]
      },
      {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "url",
            "id": "content_url",
            "label": "Content URL"
          },
          {
            "type": "text",
            "id": "content_label",
            "label": "Content Label",
            "default": "Button Label"
          }
        ]
      },
      {
        "type": "list",
        "name": "List",
        "settings": [
          {
            "type": "text",
            "id": "list_title",
            "label": "List Title",
            "default": "Lorem ipsum"
          },
          {
            "type": "textarea",
