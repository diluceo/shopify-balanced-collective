{%- if section.settings.fancy -%}
<div class="fancy-background">
{%- endif -%}
<div id="block-1{{ section.id }}" class="block-1">
	<div class="container page-width flex-main p-small">
		<div class="col">
			<div class="heading flex-inner flex-center">
        <h3 class="text-subtitle fancyheader" style="color:{{section.settings.title_colour}}; text-align:center;">{{section.settings.title}}</h3>
      </div>
			<div class="content-wrapper flex-inner" style="color:{{section.settings.text_colour}};">
				{%- for block in section.blocks -%}
					{%- case block.type -%}
						{%- when 'info' -%}
							<div class="col flex-25">
								{%- if block.settings.icon != blank -%}
								<div class="icon" style="height: {{section.settings.icon_size}}; width: {{section.settings.icon_size}};">
									{% assign my_img = block.settings.icon %}
									{% render 'image-block-svg', my_img: my_img %}
								</div>
								{%- endif -%}
								{%- if block.settings.heading != blank -%}
								<h4 class="text-main" style="color:{{section.settings.text_colour}}; margin-bottom: 7px;">{{ block.settings.heading }}</h4>
								{%- endif -%}
								{%- if block.settings.content != blank -%}
								<p class="text-main">{{ block.settings.content }}</p>
								{%- endif -%}
							</div>
					{%- endcase -%}
				{%- endfor -%}
			</div>
		</div>
	</div>
</div>
{%- if section.settings.fancy -%}
</div>
{%- endif -%}

{% schema %}
	{
		"name": "Custom Feature Block",
		"tag": "section",
		"class": "wrapper",
		"settings": [
      {
        "type": "checkbox",
        "id": "fancy",
        "label": "Fancy Background",
        "default": false
      },
			{
				"type": "text",
				"id": "title",
				"label": "Title"
			},
			{
				"type": "range",
				"id": "icon_size",
				"min": 40,
				"max": 120,
				"step": 10,
				"unit": "px",
				"label": "Icons Szie",
				"default": 60
			},
			{
				"type": "color",
				"id": "title_colour",
				"label": "Title Colour",
				"default": "#000"
			},
			{
				"type": "color",
				"id": "text_colour",
				"label": "Text Colour",
				"default": "#000"
			}
		],
		"blocks": [
			{
				"type": "info",
				"name": "Info Block",
				"settings": [
					{
						"type": "url",
						"id": "icon",
						"label": "Icon"
					},
					{
						"type": "text",
						"id": "heading",
						"label": "Heading"
					},
					{
						"type": "textarea",
						"id": "content",
						"label": "content"
					}
				]
			}
		],
		"presets": [
			{
				"name":"Custom Feature Block"
			}
		]
	}
{% endschema %}
