<div id="hero-1-{{ section.id }}" class="hero-1">
  <style>
    #hero-1-{{ section.id }} span {
      background-color: {{ section.settings.highlight_color }};
      color: {{ section.settings.highlight_text_color }};
      padding: 0 5px;
    }
  </style>
  <div class="container {{section.settings.section_width}}" style="background-color: {{section.settings.bg_color}}; padding-top:{{section.settings.top_padding}}em;">
    <div class="col flex-main flex-{{section.settings.content_alignment}} p-small">
      <div class="content-wrapper p-small text-{{section.settings.text_alignment}}">

        {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'caption' -%}
            <h6 class="caption text-main" style="font-weight:bold; color:{{section.settings.caption_color}};">{{block.settings.caption_1}}</h6>
          {%- when 'title' -%}
            {%- if block.settings.fancy -%}
            <div class="flex-main flex-center">
              <h4 class="block-title text-subtitle fancyheader" style="color:{{section.settings.title_color}};">{{block.settings.title_1}}</h4>
            </div>
            {%- else -%}
            <h4 class="block-title text-subtitle" style="color:{{section.settings.title_color}};">{{block.settings.title_1}}</h4>
            {%- endif -%}
          {%- when 'link' -%}
            <a href="{{block.settings.button_url}}" class="btn custom-btn">{{block.settings.button_label}}</a>
        {%- endcase -%}
        {%- endfor -%}

      </div>
    </div>

    {%- if section.settings.show_vid -%}
    <div class="bgimage" style="opacity: {{section.settings.bg_opacity}};">
      <video autoplay muted loop id="bgvideo">
        <source src="{{section.settings.vid_link}}" type="video/mp4">
      </video>
    </div>
    {%- else -%}
    <div class="bgimage" style="opacity: {{section.settings.bg_opacity}};">
      {% assign my_img = section.settings.bg_image %}
      {% render 'image-block', my_img: my_img %}
    </div>
    {%- endif -%}
  </div>
</div>


{% schema %}
	{
		"name": "Custom - Single Banner",
		"tag": "section",
		"class": "wrapper",
		"settings": [
      {
        "type": "range",
        "id": "top_padding",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "em",
        "label": "Top Padding",
        "default": 0
      },
			{
				"type": "select",
				"id": "content_alignment",
				"label": "Content Alignment",
				"options": [
					{
						"value": "center",
						"label": "center"
					},
					{
						"value": "center-right",
						"label": "Center Right"
					},
					{
						"value": "center-left",
						"label": "Center Left"
					},
					{
						"value": "top-right",
						"label": "Top Right"
					},
					{
						"value": "top-left",
						"label": "Top Left"
					},
					{
						"value": "bottom-right",
						"label": "Bottom Right"
					},
					{
						"value": "bottom-left",
						"label": "Bottom Left"
					}
				],
				"default": "center"
			},
      {
        "type": "radio",
        "id": "text_alignment",
        "label": "Section Width",
        "options": [
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "section_width",
        "label": "Section Width",
        "options": [
          {
            "value": "page-full",
            "label": "Full Width"
          },
          {
            "value": "page-width",
            "label": "Boxed"
          }
        ],
        "default": "page-width"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "range",
        "id": "bg_opacity",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "label": "Font size",
        "default": 1,
        "label": "Background Opacity"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "checkbox",
        "id": "show_vid",
        "label": "Use Background Video",
        "default": false
      },
      {
        "type": "url",
        "id": "vid_link",
        "label": "Background Video Link"
      },
      {
        "type": "header",
        "content": "Sections Options"
      },
      {
        "type": "color",
        "id": "caption_color",
        "label": "Caption Color"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color"
      },
      {
        "type": "color",
        "id": "highlight_color",
        "label": "Highlight Text Color"
      },
      {
        "type": "color",
        "id": "highlight_text_color",
        "label": "Highlight Color"
      }
		],
    "blocks": [
      {
        "type": "caption",
        "name": "caption",
        "limit": 1,
        "settings": [
          {
            "type": "textarea",
            "id": "caption_1",
            "label": "Caption",
            "default": "Lorem ipsum"
          }
        ]
      },
      {
        "type": "title",
        "name": "title",
        "limit": 1,
        "settings": [
          {
            "type": "textarea",
            "id": "title_1",
            "label": "Caption",
            "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit provident."
          },
          {
            "type": "checkbox",
            "id": "fancy",
            "label": "Fancy Heading",
            "default": false
          }
        ]
      },
      {
        "type": "link",
        "name": "link",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Button Label"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button Url"
          }
        ]
      }
    ],
		"presets": [
			{
				"name":"Custom - Single Banner",
        "blocks": [
          {
            "type": "caption"
          },
          {
            "type": "title"
          },
          {
            "type": "link"
          }
        ]
      }
		]
	}
{% endschema %}
