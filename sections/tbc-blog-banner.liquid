<div id="hero-1-{{ section.id }}" class="hero-2 blog-header">

  <div class="bg-wrapper">
    <div class="container page-width">
      <div class="col item-heading" style="height: 600px;">
        <h4 class="text-subtitle fancyheader">{{section.settings.heading}}</h4>
      </div>
    </div>
    {%- if section.settings.bg_image != blank -%}
    <div class="bgimage">
      {% render 'image-block', my_img: section.settings.bg_image %}
    </div>
    {%- else -%}
    <div class="bgimage">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
    {%- endif -%}
  </div>

</div>

{% schema %}
	{
		"name": "Custom Blog Hero Banner",
		"tag": "section",
		"class": "wrapper",
		"settings": [
			{
				"type": "textarea",
				"id": "heading",
				"default": "Lorem ipsum dolor.",
				"label": "Headline"
			},
			{
				"type": "image_picker",
				"id": "bg_image",
				"label": "Backgroud Image"
			}
		],
		"presets": [
			{
				"name":"Custom Newsletter"
			}
		]
	}
{% endschema %}