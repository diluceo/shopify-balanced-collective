<div id="hero-1-{{ section.id }}" class="hero-2 blog-header">
  <div class="container page-width">
    <h4 class="text-subtitle">{{section.settings.heading}}</h4>
  </div>
</div>

{% schema %}
	{
		"name": "Custom Blog - Hero",
		"tag": "section",
		"class": "wrapper",
		"settings": [
			{
				"type": "textarea",
				"id": "heading",
				"default": "Lorem ipsum dolor.",
				"label": "Headline"
			},
			{
				"type": "image_picker",
				"id": "bg_image",
				"label": "Backgroud Image"
			}
		],
		"presets": [
			{
				"name":"Custom Blog - Hero"
			}
		]
	}
{% endschema %}